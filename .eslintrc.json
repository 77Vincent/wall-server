{
    "env": {
        "node": true,
        "commonjs": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "rules": {
        "init-declarations": ["error", "always"],
        "linebreak-style": "off",
        "camelcase": "off",
        "semi": ["error", "never"],
        "prefer-destructuring": ["error", {
            "object": true
        }],
        "no-await-in-loop": "off",
        "no-console": ["error", {
            "allow": ["warn", "error"]
        }],
        "max-len": ["error", {
            "code": 120 
        }]
    }
}